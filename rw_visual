import matplotlib.pyplot as plt

from Random_walk import RandomWalk

rw = RandomWalk(5000)
rw.fill_walk();

plt.scatter(rw.x_value, rw.y_value, c=list(range(rw.num_points)),cmap=plt.cm.Blues, edgecolor='none',s=5)
plt.show()


plt.scatter(rw.x_value[0],rw.y_value[0],s=50)
plt.scatter(rw.x_value[-1],rw.y_value[-1],s=50)

plt.axes().get_xaxis().get_visible(False)
plt.axes().get_yaxis().get_visible(False)

plt.show()

